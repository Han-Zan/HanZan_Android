<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HanZan" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/color_hanzan</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowFullscreen">false</item>
        <!-- Font Style -->
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">15sp</item>

        <item name="searchViewStyle">@style/CustomSearchView</item>

        <item name="android:windowActivityTransitions">true</item>

        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
    </style>
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView" />

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>
    <style name="customTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="customToolbarTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="fontFamily">@font/font_pretendard_medium</item>
    </style>
    <style name="CustomOutlinedButton" parent="">
        <item name="colorPrimary">@color/color_hanzan</item>
    </style>
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0dp</item>
    </style>
</resources>
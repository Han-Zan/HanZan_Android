<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HanZan" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView</item>


        <!-- Font Style -->
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">15sp</item>

        <item name="searchViewStyle">@style/CustomSearchView</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView" />

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>
    <style name="customTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="customToolbarTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font_pretendard_medium</item>
        <item name="fontFamily">@font/font_pretendard_medium</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingHorizontal">18dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
    </style>
</resources>
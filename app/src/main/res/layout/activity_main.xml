<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_main"
    tools:context=".ui.MainActivity">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_fragment_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/main_bottom_graph" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/main_bottom_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        app:backgroundTint="@color/color_1b1b1b"
        style="@style/Widget.Material3.BottomAppBar"
        android:layout_gravity="bottom"
        android:background="@color/color_1b1b1b"
        app:fabAlignmentMode="center"
        app:fabCradleVerticalOffset="0dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:itemIconTint="@drawable/bottom_icon_selector">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:menu="@menu/menu_main"
            style="@style/Widget.MaterialComponents.BottomNavigationView"
            android:background="@color/color_1b1b1b"
            app:labelVisibilityMode="unlabeled"
            app:itemIconTint="@drawable/bottom_icon_selector">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </com.google.android.material.bottomappbar.BottomAppBar>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_camera_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        app:iconSize="30dp"
        app:backgroundTint="@color/color_hanzan"
        app:layout_anchor="@id/main_bottom_appbar"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconTint="@color/color_white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.combination.FoodCategoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/like_basic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@null">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/food_category_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                app:navigationIcon="@drawable/ic_previous"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                app:menu="@menu/toolbar_search">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_category_title"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:textAppearance="@style/customToolbarTitle"
                    android:layout_gravity="center"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/like_basic_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="5"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/food_category_meat_btn"
                    android:background="@null"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_food_meat"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1" />

                <ImageButton
                    android:id="@+id/food_category_fish_btn"
                    android:background="@null"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_food_fish"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <ImageButton
                    android:id="@+id/food_category_fries_btn"
                    android:background="@null"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_food_fries"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <ImageButton
                    android:id="@+id/food_category_soup_btn"
                    android:background="@null"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_food_soup"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <ImageButton
                    android:id="@+id/food_category_dry_btn"
                    android:background="@null"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_food_dry"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <ImageButton
                    android:id="@+id/food_category_fruit_btn"
                    android:background="@null"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_food_fruit"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <ImageButton
                    android:id="@+id/food_category_dessert_btn"
                    android:background="@null"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_food_dessert"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>

                <ImageButton
                    android:id="@+id/food_category_etc_btn"
                    android:background="@null"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_food_etc"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"/>
            </GridLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
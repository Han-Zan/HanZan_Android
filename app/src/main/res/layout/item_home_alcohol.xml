<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="alcohol"
            type="com.kud.hanzan.domain.model.Alcohol" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_home_alcohol_layout"
    android:layout_width="120dp"
    android:layout_height="150dp"
    android:layout_marginEnd="10dp"
    android:clickable="true"
    android:background="@drawable/bg_alcohol_type0">
    <ImageView
        android:id="@+id/item_home_alcohol_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_home_alcohol_selected_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_margin="9dp">
        <TextView
            android:id="@+id/item_home_alcohol_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@{alcohol.name}'
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_home_alcohol_guideline"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/item_home_alcohol_guideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>
        <LinearLayout
            android:id="@+id/item_home_alcohol_rating_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/item_home_alcohol_guideline"
            app:layout_constraintStart_toStartOf="parent">
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:rating="@{Float.valueOf(Double.toString(alcohol.rating))}"
                android:stepSize="0.5"
                android:numStars="5"
                android:isIndicator="true"
                android:progressTint="@color/color_hanzan"
                android:progressBackgroundTint="@color/color_d4d4d4"/>
            <TextView
                android:id="@+id/item_home_alcohol_rating_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="@color/color_858585"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/font_pretendard_regular"
                android:text='@{Double.toString(alcohol.rating)}'
                android:layout_marginStart="5dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"#" + alcohol.tag}'
            android:textSize="12dp"
            android:fontFamily="@font/font_pretendard_regular"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/item_home_alcohol_rating_layout"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:id="@+id/item_home_alcohol_click_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/click_more"
                android:textSize="12dp"
                android:textColor="@color/color_858585"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_858585"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
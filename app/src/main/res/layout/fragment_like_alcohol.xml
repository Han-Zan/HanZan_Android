<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="likeViewModel"
            type="com.kud.hanzan.ui.like.LikeViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:id="@+id/like_keyword_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent">
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <RadioButton
                android:id="@+id/like_keyword_total_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:minHeight="0dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="전체"
                android:checked="true"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/cb_map_category_selector"/>
            <RadioButton
                android:id="@+id/like_keyword_type_01_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginStart="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="소주"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/cb_map_category_selector"/>
            <RadioButton
                android:id="@+id/like_keyword_type_02_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginStart="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="맥주"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/cb_map_category_selector"/>
            <RadioButton
                android:id="@+id/like_keyword_type_03_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginStart="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="양주"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/cb_map_category_selector"/>
            <RadioButton
                android:id="@+id/like_keyword_type_04_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginStart="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="와인"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/cb_map_category_selector"/>
            <RadioButton
                android:id="@+id/like_keyword_type_05_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:minHeight="0dp"
                android:layout_marginStart="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="기타"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/cb_map_category_selector"/>
        </RadioGroup>
    </HorizontalScrollView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/like_keyword_sv"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/like_keyword_sv">

            <Button
                android:id="@+id/like_preferred_sort_btn"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="0dp"
                android:paddingBottom="8dp"
                android:text="@string/like_preferred_sort_default"
                android:textStyle="bold"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                app:icon="@drawable/ic_sort"
                app:iconGravity="end"
                app:iconTint="@color/color_white"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/like_preferred_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
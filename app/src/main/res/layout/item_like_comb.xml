<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="combination"
            type="com.kud.hanzan.domain.model.Combination" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="20dp">
        <LinearLayout
            android:id="@+id/item_like_comb_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="4dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_like_comb_alcohol_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:imageUrl="@{combination.drinkimg}"
                app:placeholder="@{@android:color/transparent}"
                android:background="@drawable/bg_like_comb"/>
            <View
                android:layout_width="12dp"
                android:layout_height="2dp"
                android:background="@color/text_unselected"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_like_comb_food_iv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:imageUrl="@{combination.foodimg}"
                app:placeholder="@{@android:color/transparent}"
                android:background="@drawable/bg_like_comb"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_like_comb_detail_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_like_comb_image_layout"
            app:layout_constraintEnd_toStartOf="@id/item_like_comb_like_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textFontWeight="600"
                android:text='@{combination.drinkname +" - " + combination.foodname, default="일반 소주 - 닭발"}'
                android:fontFamily="@font/font_pretendard_semibold" />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_like_comb_like_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/item_like_comb_like_cb"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:button="@null"
                android:checked="@{combination.isPrefer(), default=true}"
                android:drawableStart="@drawable/selector_heart"
                android:paddingStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />
            <TextView
                android:id="@+id/item_like_comb_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text='@{String.valueOf(combination.pnum), default=111}'
                android:textColor="@color/text_hint"
                android:textSize="10sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/font_pretendard_semibold"
                app:layout_constraintTop_toTopOf="@id/item_like_comb_like_cb"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:dividerColor="@color/text_unselected"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
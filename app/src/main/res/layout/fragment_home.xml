<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="user"
            type="com.kud.hanzan.domain.model.User" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_basic1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/home_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{user.name + " 님은"}'
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_pretendard_extrabold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/home_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/font_pretendard_extrabold"
                    android:text="@{user.type}"
                    android:textColor="@color/color_main"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/home_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/home_name_tv" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/home_type_tv"
                    app:layout_constraintStart_toStartOf="@id/home_type_tv"
                    app:layout_constraintEnd_toEndOf="@id/home_type_tv"
                    android:background="@color/color_main"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 유형입니다."
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_white"
                    android:fontFamily="@font/font_pretendard_extrabold"
                    app:layout_constraintTop_toTopOf="@id/home_type_tv"
                    app:layout_constraintBottom_toBottomOf="@id/home_type_tv"
                    app:layout_constraintStart_toEndOf="@id/home_type_tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/home_search1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/bg_text_field_black"
                app:layout_constraintTop_toBottomOf="@id/home_basic1_layout" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_search"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/text_hint"
                    android:text="@string/home_search_hint"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_type_alcohol_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_search1_layout">
                <TextView
                    android:id="@+id/home_type_alcohol_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text='@{user.type + " 유형이 좋아해요."}'
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/home_type_alcohol_more"/>
                <LinearLayout
                    android:id="@+id/home_type_alcohol_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="@id/home_type_alcohol_tv"
                    app:layout_constraintBottom_toBottomOf="@id/home_type_alcohol_tv"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="더보기"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_hint"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_type_alcohol_rv"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_plate_white_glass"
                    android:padding="20dp"
                    app:layout_constraintTop_toBottomOf="@id/home_type_alcohol_tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_like_alcohol_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/home_type_alcohol_layout">
                <TextView
                    android:id="@+id/home_like_alcohol_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/home_like_alcohol_guide"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/home_like_alcohol_more"/>
                <LinearLayout
                    android:id="@+id/home_like_alcohol_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="@id/home_like_alcohol_tv"
                    app:layout_constraintBottom_toBottomOf="@id/home_like_alcohol_tv"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="더보기"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_hint"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_like_alcohol_rv"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_plate_white_glass"
                    android:padding="20dp"
                    app:layout_constraintTop_toBottomOf="@id/home_like_alcohol_tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
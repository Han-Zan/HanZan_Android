<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_basic_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/home_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_pretendard_extrabold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 님은"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_pretendard_extrabold"
            app:layout_constraintStart_toEndOf="@id/home_name_tv"
            app:layout_constraintTop_toTopOf="@id/home_name_tv"
            app:layout_constraintBottom_toBottomOf="@id/home_name_tv"/>

        <TextView
            android:id="@+id/home_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/font_pretendard_extrabold"
            android:text="고독한 미식가"
            android:textColor="@color/color_hanzan"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/home_name_tv"
            app:layout_constraintTop_toBottomOf="@id/home_name_tv" />
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/home_type_tv"
            app:layout_constraintStart_toStartOf="@id/home_type_tv"
            app:layout_constraintEnd_toEndOf="@id/home_type_tv"
            android:background="@color/color_hanzan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 유형입니다."
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_pretendard_extrabold"
            app:layout_constraintTop_toTopOf="@id/home_type_tv"
            app:layout_constraintBottom_toBottomOf="@id/home_type_tv"
            app:layout_constraintStart_toEndOf="@id/home_type_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/home_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_home_search"
        app:layout_constraintTop_toBottomOf="@id/home_basic_layout" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_search"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/font_pretendard_medium"
            android:textColor="@color/color_858585"
            android:text="@string/home_search_hint"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/log_in_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        tools:context=".ui.login.LogInActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/login_user_profile_image_view"
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/user_dummy_icon"
            android:background="@drawable/ic_profile_background"/>
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/login_profile_change_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintEnd_toEndOf="@id/login_user_profile_image_view"
            app:layout_constraintBottom_toBottomOf="@id/login_user_profile_image_view"
            android:src="@drawable/ic_profile_change_button"/>
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_white_text_field"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="241dp"
            android:hint="@string/set_user_name_hint"
            android:textColorHint="@color/text_hint"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:maxLines="1"
            android:maxLength="13"/>


        <Button
            android:id="@+id/login_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/color_main"
            android:text="술BTI 검사하러 가기!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
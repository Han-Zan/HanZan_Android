<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.kud.hanzan.ui.camera.CameraViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/camera_result_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_result_title"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/camera_item_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/bg_yellow_button_test"
        app:layout_constraintTop_toBottomOf="@id/camera_result_title_tv"
        app:layout_constraintBottom_toTopOf="@id/camera_result_next_btn">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/camera_result_item_food_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/camera_result_food_list"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/camera_result_item_food_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:overScrollMode="never"
                app:layout_constraintTop_toBottomOf="@id/camera_result_item_food_title_tv"
                app:layout_constraintBottom_toTopOf="@id/camera_alcohol_button_layout"/>
            <LinearLayout
                android:id="@+id/camera_alcohol_button_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <Button
                    android:id="@+id/camera_alcohol_manual_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_result_manual"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white" />
                <Button
                    android:id="@+id/camera_alcohol_again_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_result_again"
                    android:textColor="@color/black"
                    android:layout_marginStart="12dp"
                    android:backgroundTint="@color/white" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:dividerColor="@color/text_unselected"
            android:layout_marginHorizontal="20dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/camera_result_item_alcohol_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/camera_result_alcohol_list"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/camera_result_item_alcohol_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:overScrollMode="never"
                app:layout_constraintTop_toBottomOf="@id/camera_result_item_alcohol_title_tv"
                app:layout_constraintBottom_toTopOf="@id/camera_food_button_layout"/>
            <LinearLayout
                android:id="@+id/camera_food_button_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <Button
                    android:id="@+id/camera_food_manual_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_result_manual"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white" />
                <Button
                    android:id="@+id/camera_food_again_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_result_again"
                    android:textColor="@color/black"
                    android:layout_marginStart="12dp"
                    android:backgroundTint="@color/white" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <Button
        android:id="@+id/camera_result_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@drawable/bg_button_enable"
        android:text="@string/camera_result_next"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:enabled="@{!viewModel.itemNull}"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>

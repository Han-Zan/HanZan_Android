<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/like_basic_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/like_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/like_title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_pretendard_extrabold"
            android:textFontWeight="800"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:id="@+id/like_search_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_colored"
            android:padding="5dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/like_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/like_title_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/like_basic_layout"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/like_tab_tb"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:tabTextAppearance="@style/customTabText"
            app:tabRippleColor="@android:color/transparent"
            app:tabIndicatorColor="@color/color_hanzan"
            app:tabTextColor="@color/text_unselected"
            app:tabSelectedTextColor="@color/white"
            app:tabIndicatorFullWidth="true"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/like_tab_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/like_tab_tb"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
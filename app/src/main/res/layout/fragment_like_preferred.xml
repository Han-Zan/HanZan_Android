<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:id="@+id/like_keyword_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/like_keyword_total_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:gravity="center"
                android:minHeight="0dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="전체"
                android:fontFamily="@font/font_pretendard_semibold"
                android:checked="true"
                android:background="@drawable/cb_map_category_selector"/>
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/like_keyword_type01_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:minHeight="0dp"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:fontFamily="@font/font_pretendard_semibold"
                android:text="소주"
                android:background="@drawable/cb_map_category_selector"/>
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/like_keyword_type02_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:gravity="center"
                android:minHeight="0dp"
                android:layout_marginStart="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="맥주"
                android:fontFamily="@font/font_pretendard_semibold"
                android:background="@drawable/cb_map_category_selector"/>
        </LinearLayout>


    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
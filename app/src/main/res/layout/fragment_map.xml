<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/map_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="내 주변 검색"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.SearchView
            android:id="@+id/map_searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_home_search"
            app:iconifiedByDefault="false"
            app:queryBackground="@null"
            app:queryHint="@string/map_search_hint"
            app:layout_constraintTop_toBottomOf="@id/map_name_tv"/>
        <HorizontalScrollView
            android:id="@+id/map_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/map_searchView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/map_default_address"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_down"/>

                <CheckBox
                    android:id="@+id/map_pickup_near_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cb_map_category_selector"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:checked="true"
                    android:gravity="center"
                    android:button="@null"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:text="가까운 순"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/map_pickup_avail_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cb_map_category_selector"
                    android:text="픽업 가능"
                    android:minHeight="0dp"
                    android:button="@null"
                    android:checked="true"
                    android:layout_marginStart="10dp"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="20dp"
                    android:gravity="center"
                    android:textStyle="bold"/>

<!--                <LinearLayout-->
<!--                    android:id="@+id/map_pickup_avail"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="horizontal"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:background="@drawable/bg_category">-->
<!--                    <TextView-->
<!--                        android:text="픽업 가능"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:textStyle="bold"-->
<!--                        android:layout_marginStart="20dp"-->
<!--                        android:paddingVertical="8dp"/>-->
<!--                </LinearLayout>-->
            </LinearLayout>
        </HorizontalScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kakao_mapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/map_setting_layout"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/map_current_pos_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_current_pos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>